<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/DEMO_ORS3</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hbm2ddl.auto">update</property>
        
        <mapping resource="in/co/rays/ORSProj3/dto/CollegeDTO.hbm.xml"/>
        <mapping resource="in/co/rays/ORSProj3/dto/CourseDTO.hbm.xml"/>
        <mapping resource="in/co/rays/ORSProj3/dto/FacultyDTO.hbm.xml"/>
        <mapping resource="in/co/rays/ORSProj3/dto/MarksheetDTO.hbm.xml"/>
        <mapping resource="in/co/rays/ORSProj3/dto/RoleDTO.hbm.xml"/>
        <mapping resource="in/co/rays/ORSProj3/dto/StudentDTO.hbm.xml"/>
        <mapping resource="in/co/rays/ORSProj3/dto/SubjectDTO.hbm.xml"/>
        <mapping resource="in/co/rays/ORSProj3/dto/TimeTableDTO.hbm.xml"/>
        <mapping resource="in/co/rays/ORSProj3/dto/UserDTO.hbm.xml"/>
        
    </session-factory>
</hibernate-configuration>
